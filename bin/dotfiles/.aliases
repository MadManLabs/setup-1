#!/usr/bin/env bash

# aliases
#
# useful aliases to shorten common commands
# --------

# allow sudo for aliases

alias sudo='sudo '

# colored output

alias ls='ls -GF'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# usage info

alias cpu='top -o cpu'
alias mem='top -o mem'

# misc. tools

alias c='clear'
alias ip='ifconfig | sed -En "s/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p"'
alias up='cd ..'
alias emptytrash='sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash'
alias notify='tput bel'
alias finder='open -a Finder .'
alias flac2mp3='for f in *.flac; do ffmpeg -i "$f" -aq 1 "${f%flac}mp3"; done'

# brew

alias bubu='brew update && brew upgrade'

# edit important files

alias bashrc='vim ~/.bashrc'
alias vimrc='vim ~/.vimrc'

# pip

alias pip_update='pip freeze --local | grep -v '^-e' | cut -d = -f 1  | xargs pip install -U'
alias pip_reg='python setup.py register -r pypi'
alias pip_up='python setup.py sdist upload -r pypi'
