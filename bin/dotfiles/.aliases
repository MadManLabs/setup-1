#!/usr/bin/env bash

# aliases
#
# useful aliases to shorten common commands
# --------

# cd stuff

alias up='cd ..'
alias ~='cd ~'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# always be careful :)

alias mv='mv -v'
alias rm='rm -v'
alias cp='cp -v'

# allow sudo for aliases

alias sudo='sudo '

# colored output

alias ls='ls -GF'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# usage info

alias cpu='top -o cpu'
alias mem='top -o mem'

# ip

alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"

# http

alias get='http GET'
alias post='http POST'
alias put='http PUT'
alias delete='http DELETE'

# misc. tools

alias c='clear'
alias chrome-kill='ps ux | grep "[C]hrome Helper --type=renderer" | grep -v extension-process | tr -s " " | cut -d " " -f2 | xargs kill'
alias emptytrash='sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash/*; sudo rm -v /private/var/vm/sleepimage'
alias finder='open -a Finder .'
alias flac2mp3='for f in *.flac; do ffmpeg -i "$f" -aq 1 "${f%flac}mp3"; done'
alias notify='tput bel'
alias path='echo -e ${PATH//:/\\n}'
alias space='df -P -kHl'

# brew

alias bubu='brew update && brew upgrade'

# edit some important files

alias bashrc='vim ~/.bashrc'
alias inputrc='vim ~/.inputrc'
alias vimrc='vim ~/.vimrc'

# pip

alias pip_update='pip freeze --local | grep -v ^-e | cut -d = -f 1  | xargs pip install -U'
alias pip_register='python setup.py register -r pypi'
alias pip_upload='python setup.py sdist upload -r pypi'
alias pip3_update='pip3 freeze --local | grep -v ^-e | cut -d = -f 1 | xargs pip3 install -U'
alias pip3_register='python3 setup.py register -r pypi'
alias pip3_upload='python3 setup.py sdist upload -r pypi'

# fun commands

alias afk='/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend'
alias fuckoff='exit'
alias shutup='osascript -e "set volume output muted true"'
alias turnup='osascript -e "set volume output volume 100"'
